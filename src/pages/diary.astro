import MarkdownIt from 'markdown-it';
import { siteConfig } from '../config';
import I18nKey from '../i18n/i18nKey';
import { i18n } from '../i18n/translation';
import MainGridLayout from '../layouts/MainGridLayout.astro';

if (!siteConfig.featurePages.diary) return Astro.redirect('/404/');

const API = 'https://memo-api.zsx815.top/v2/repos/mcyzsx/Moment/issues%3Fper_page%3D20/data.json';
let remoteIssues: any[] = [];
try {
  const res = await fetch(API);
  if (res.ok) remoteIssues = await res.json();
} catch (e) {
  console.warn('[diary] fetch error:', e);
}

const md = new MarkdownIt({ html: true, linkify: true, typographer: true });
remoteIssues.forEach(iss => (iss.body = (iss.body || '').replace(/\r?\n/g, '<br>')));

interface Moment {
  id: number;
  title: string;
  html: string;
  date: string;
  labels: string[];
}
const moments: Moment[] = remoteIssues.map(iss => ({
  id: iss.id,
  title: iss.title,
  html: md.render(iss.body),
  date: iss.created_at,
  labels: (iss.labels || []).map((l: any) => l.name),
}));

function formatTime(dateString: string): string {
  const now = new Date();
  const date = new Date(dateString);
  const diff = Math.floor((now.getTime() - now.getTimezoneOffset() * 6e4 - date.getTime()) / 6e4);
  if (diff < 60) return `${diff}${i18n(I18nKey.diaryMinutesAgo)}`;
  if (diff < 1440) return `${Math.floor(diff / 60)}${i18n(I18nKey.diaryHoursAgo)}`;
  return `${Math.floor(diff / 1440)}${i18n(I18nKey.diaryDaysAgo)}`;
}

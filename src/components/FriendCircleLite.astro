---
// 不需要服务端 import FriendCircle
---
<div id="friend-circle-lite-root">加载中...</div>

<script type="module">
  const root = document.getElementById('friend-circle-lite-root');
  if (!root) return;

  import('@/plugins/friendCircle').then(({ FriendCircle }) => {
    const lite = new FriendCircle();
    lite.init({
      private_api_url: 'https://fc.kemeow.top/',
      page_turning_number: 10,
      error_img: 'https://cravatar.cn/avatar/57d8260dfb55501c37dde588e7c3852c'
    });
    lite.load();
  }).catch(err => {
    console.error('[FriendCircle] 加载失败:', err);
    root.textContent = '加载失败，请刷新重试';
  });
</script>
